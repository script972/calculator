<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--1-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:cursorVisible="false"
            android:ems="25"
            android:textSize="35dp"
            android:textColor="@color/colorAccent"
            android:background="@color/colorPrimary"
            android:enabled="true"
            android:focusable="false"
            android:inputType="numberDecimal"
            android:text="0" >
            <requestFocus/>
            </EditText>

    </LinearLayout>


    <!--2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnDelete"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:contentDescription="Del"
            android:onClick="buttonClick"
            android:background="@drawable/man_butt_scen"
            android:text="&lt;-" />





        <Button
            android:id="@+id/btnClear"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:contentDescription="C"
            android:background="@drawable/man_butt_scen"
            android:onClick="buttonClick"
            android:text="AC" />


        <Button
            android:id="@+id/btnGeom"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:contentDescription="Geom"

            android:onClick="buttonClick"
            android:background="@drawable/man_butt_scen"


            android:text="Geom" />



    </LinearLayout>


    <!--3-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSeven"
            style="?android:attr/buttonStyleSmall"
            android:gravity="center_horizontal|center_vertical"
            android:contentDescription="7"
            android:onClick="buttonClick"
            android:text="7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_scen"

            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnEight"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:contentDescription="8"
            android:onClick="buttonClick"
            android:text="8"
            android:background="@drawable/button_scen"


            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnNine"
            style="?android:attr/buttonStyleSmall"
            android:gravity="center_horizontal|center_vertical"
            android:contentDescription="9"
            android:onClick="buttonClick"
            android:text="9"
            android:background="@drawable/button_scen"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnDivide"
            style="?android:attr/buttonStyleSmall"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:contentDescription="/"
            android:onClick="buttonClick"
            android:background="@drawable/man_butt_scen"


            android:text="/" />

    </LinearLayout>

    <!--4-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnFour"
            style="?android:attr/buttonStyleSmall"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:layout_row="1"
            android:contentDescription="4"
            android:onClick="buttonClick"
            android:background="@drawable/button_scen"

            android:text="4" />


        <Button
            android:id="@+id/btnFive"
            style="?android:attr/buttonStyleSmall"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:contentDescription="5"
            android:onClick="buttonClick"
            android:background="@drawable/button_scen"

            android:text="5" />

        <Button
            android:id="@+id/btnSix"
            style="?android:attr/buttonStyleSmall"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:contentDescription="6"
            android:onClick="buttonClick"
            android:background="@drawable/button_scen"

            android:text="6" />

        <Button
            android:id="@+id/btnMultiply"
            style="?android:attr/buttonStyleSmall"
            android:layout_weight="1"
            android:background="@drawable/man_butt_scen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:contentDescription="*"
            android:onClick="buttonClick"
            android:text="*" />



    </LinearLayout>


    <!--5-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOne"
            style="?android:attr/buttonStyleSmall"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:contentDescription="1"
            android:onClick="buttonClick"
            android:background="@drawable/button_scen"

            android:text="1" />

        <Button
            android:id="@+id/btnTwo"
            style="?android:attr/buttonStyleSmall"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:contentDescription="2"
            android:background="@drawable/button_scen"

            android:onClick="buttonClick"
            android:text="2" />

        <Button
            android:id="@+id/btnThree"
            style="?android:attr/buttonStyleSmall"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:contentDescription="3"
            android:onClick="buttonClick"
            android:background="@drawable/button_scen"

            android:text="3" />

        <Button
            android:id="@+id/btnSubtract"
            style="?android:attr/buttonStyleSmall"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:contentDescription="-"
            android:onClick="buttonClick"
            android:background="@drawable/man_butt_scen"


            android:text="-" />



    </LinearLayout>


    <!--6-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnZero"
            style="?android:attr/buttonStyleSmall"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_scen"
            android:gravity="center_horizontal|center_vertical"
            android:contentDescription="0"
            android:onClick="buttonClick"

            android:text="0" />

        <Button
            android:id="@+id/btnComma"
            style="?android:attr/buttonStyleSmall"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_scen"
            android:gravity="center_horizontal|center_vertical"
            android:contentDescription=","
            android:onClick="buttonClick"

            android:text="." />
        <Button
            android:id="@+id/btnResult"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_scen"
            android:gravity="center_horizontal|center_vertical"
            android:contentDescription="="
            android:onClick="buttonClick"

            android:text="=" />

        <Button
            android:id="@+id/btnAdd"
            style="?android:attr/buttonStyleSmall"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/man_butt_scen"

            android:gravity="center_horizontal|center_vertical"
            android:contentDescription="+"

            android:onClick="buttonClick"
            android:text="+" />

    </LinearLayout>





</LinearLayout>